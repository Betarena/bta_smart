{
  "name": "betarena-smart-contract",
  "description": "Development of the Betarena smart contract",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "npm": "10.1.0",
    "node": "20.11.0"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepare": "is-ci || husky install",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Betarena/investor_contract.git"
  },
  "keywords": [
    "smart-contract",
    "polygon",
    "openzeppelin",
    "bank",
    "solidity",
    "hardhat"
  ],
  "author": "migbash",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Betarena/investor_contract/issues"
  },
  "homepage": "https://github.com/Betarena/investor_contract#readme",
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.3",
    "@nomicfoundation/hardhat-toolbox": "3.0.0",
    "@nomiclabs/hardhat-etherscan": "3.1.8",
    "@openzeppelin/contracts": "5.0.2",
    "@openzeppelin/contracts-upgradeable": "5.0.2",
    "@openzeppelin/hardhat-upgrades": "2.5.1",
    "@types/fs-extra": "11.0.4",
    "@uniswap/sdk-core": "5.3.1",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v3-core": "1.0.1",
    "@uniswap/v3-sdk": "3.13.1",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.4.5",
    "ethernal": "2.3.1",
    "ethers": "6.13.1",
    "fs-extra": "11.2.0",
    "hardhat": "2.22.7",
    "hardhat-abi-exporter": "2.10.1",
    "hardhat-ethernal": "3.2.5",
    "hardhat-gas-reporter": "1.0.10",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "table": "6.8.2",
    "validate-branch-name": "1.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop|dev){1}$|^(feature|fix|hotfix|release|refractor).+$",
    "errorMsg": "❌ Uh-oh! Please check package.json > validate-branch-name for allowed branch names!"
  },
  "dependencies": {
    "@pancakeswap/v3-core": "1.0.2"
  }
}
